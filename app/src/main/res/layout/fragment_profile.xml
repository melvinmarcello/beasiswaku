<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_profile"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="105pt"
            android:scaleType="center"
            android:src="@drawable/ic_rectangle_516" />

    </LinearLayout>

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#25383C"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20pt"/>

    <TextView
        android:id="@+id/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile"
        android:layout_alignRight="@id/profile"
        android:layout_marginRight="20dp"
        android:text="Sign Out"
        android:textColor="@color/white"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        app:civ_border_color="#DFE2E2"
        app:civ_border_width="5dp"
        android:layout_below="@id/profile"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prfl" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Neny Rosmawarni"
        android:textSize="8pt"
        android:textStyle="bold"
        android:textColor="#25383C" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="nenyrosmawarni@gmail.com"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Edit Profile"
        android:textSize="7pt"
        android:textStyle="bold"
        android:textColor="#2485F6"/>

    <View
        android:id="@+id/divider"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_below="@id/edit_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:background="#8F8E8E" />

    <TextView
        android:id="@+id/tv_saved_scholarship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:text="Saved Scholarship"
        android:textColor="#25383C"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contSavedScholarshp"
        android:layout_below="@+id/tv_saved_scholarship">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic_saved_scholarship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_saved_scholarship"
            android:layout_marginLeft="28dp"
            android:elevation="10dp"
            android:src="@drawable/g3"
            android:stateListAnimator="@null" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic2_saved_scholarship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_saved_scholarship"
            android:layout_toRightOf="@id/pic_saved_scholarship"
            android:layout_marginLeft="10dp"
            android:src="@drawable/g4"
            android:elevation="10dp"
            android:stateListAnimator="@null"   />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic3_saved_scholarship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_saved_scholarship"
            android:layout_toRightOf="@id/pic2_saved_scholarship"
            android:layout_marginLeft="10dp"
            android:src="@drawable/g2"
            android:elevation="10dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_saved_scholarship"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tv_saved_scholarship"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/contSavedScholarshp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_vector"
        android:elevation="10dp"
        android:stateListAnimator="@null" />


    <TextView
        android:id="@+id/tv_applied_scholarship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contSavedScholarshp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Applied Scholarship"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#25383C"
        android:paddingLeft="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_applied_scholarship"
        android:id="@+id/containerAppliedScholarship">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic_applied_scholarship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_applied_scholarship"
            android:layout_marginLeft="28dp"
            android:src="@drawable/g2"
            android:elevation="10dp"
            android:stateListAnimator="@null" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic2_applied_scholarship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_applied_scholarship"
            android:layout_toRightOf="@id/pic_applied_scholarship"
            android:layout_marginLeft="10dp"
            android:src="@drawable/g3"
            android:elevation="10dp"
            android:stateListAnimator="@null" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic3_applied_scholarship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_applied_scholarship"
            android:layout_toRightOf="@id/pic2_applied_scholarship"
            android:layout_marginLeft="10dp"
            android:src="@drawable/g5"
            android:elevation="10dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_applied_scholarship"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tv_applied_scholarship"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/containerAppliedScholarship"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_vector"
        android:elevation="10dp"
        android:stateListAnimator="@null" />

</RelativeLayout>